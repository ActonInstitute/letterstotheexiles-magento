<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<div class="page-title">
    <h1><?php echo $this->__('My Product Reviews') ?></h1>
</div>
<?php if( $this->getCollection() && $this->count()): ?>
    <?php echo $this->getToolbarHtml() ?>

<div class="row">
    <div class="col-md-12">

                <?php foreach ($this->getCollection() as $_review): ?>
                <div class="row review-list-row">
                    <div class="col-sm-2">
                        <span class="nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span>
                    </div>
                    <div class="col-sm-4">
                        <strong><a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->htmlEscape($_review->getName()) ?></a></strong>
                    </div>
                    <div class="col-sm-4">
                        <?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?>
                    </div>
                    <div class="col-sm-2">
                        <a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr"><?php echo $this->__('View Details') ?></a>
                    </div>
                </div>
                <?php endforeach; ?>
 
    </div>
</div>

        <script type="text/javascript">decorateTable('my-reviews-table')</script>
    <?php echo $this->getToolbarHtml() ?>
<?php else: ?>
    <p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>
