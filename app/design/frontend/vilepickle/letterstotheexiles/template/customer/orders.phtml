<div class="page-title">
    <h1><?php echo $this->__('My Orders') ?></h1>
</div>
<?php if($orders->getSize()): ?>

        <div class="row">
            <div class="col-sm-2">
                <?php echo $this->__('Order #') ?>
            </div>
            <div class="col-sm-2">
                <?php echo $this->__('Date') ?>
            </div>
            <div class="col-sm-2">
                <?php echo $this->__('Total') ?>
            </div>
            <div class="col-sm-2">
                <?php echo $this->__('Status') ?>
            </div>
            <div class="col-sm-2">
                &nbsp;
            </div>

        </div>

    <?php foreach ($orders as $order): ?>
        <div class="row">
            <div class="col-sm-2">
                <?php echo $order->getRealOrderId() ?>
            </div>
            <div class="col-sm-2">
                <?php echo date("D, j M, Y", strtotime($order->getCreatedAt())) ?>
            </div>
            <div class="col-sm-2">
                <?php echo $order->getGrandTotal() ?>
            </div>
            <div class="col-sm-2">
                <?php echo $order->getStatus() ?>
            </div>
            <div class="col-sm-2">
                <a href="<?php echo $this->getUrl('customer/order/view', array('order'=>$order->getOrderId())) ?>"><?php echo $this->__('View Order') ?></a>
            </div>
        </div>
    <?php endforeach ?>
<script type="text/javascript">decorateTable('my-orders-table')</script>
<?php else: ?>
    <p><?php echo $this->__('You have placed no orders yet.') ?></p>
<?php endif ?>
