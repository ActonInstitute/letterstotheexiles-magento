    $columns = $this->getColumns();
?>

        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
            <div class="row" id="item_<?php echo $item->getId();?>">
                <div class="col-md-12 wishlist-item">
                    <div class="row">
                        <?php foreach ($columns as $column): ?>
                                <?php $column->setItem($item); echo $column->toHtml($item);?>
                        <?php endforeach; ?>
                    </div>
                </div>
            </div>
            <?php endforeach ?>
        <?php else: ?>
            <div class="col-md-12 wishlist-empty"><?php echo $this->__('This Wishlist has no Items');?></div>
        <?php endif; ?>



<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
//<![CDATA[
